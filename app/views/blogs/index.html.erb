<%= render "navbar" %>
<header class="masthead" style="background-image: url('/assets/banner_img.png')">
  <div class="container position-relative px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <div class="site-heading">
            <h1 id="blog"><strong>Blog</strong></h1>
            <span class="subheading"></span>
          </div>
        </div>
      </div>
  </div>
</header>
<div class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <hr class="my-4" />
      <% @blogs.reverse_each do |blog| %>
        <div class="post-preview">
          <h2 id="blog-title" class="blog-post-title"><%= link_to blog.title, blog_path(blog) %></h2>
          <p class="blog-post-meta">
            Posted by <%= blog.author %> on <%= blog.created_at.strftime("%B %d, %Y") %>
          </p>
        </div>
        <hr class="my-4" />
      <% end %>
      <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div>
    </div>
  </div>
</div>
